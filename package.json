{
  "name": "tic-tac-toe",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon -w src/server -x 'tsx --tsconfig ./src/server/tsconfig.json' src/server/main.ts",
    "start": "NODE_ENV=production tsx --tsconfig ./src/server/tsconfig.json src/server/main.ts",
    "build": "vite build",
    "lint": "eslint --fix",
    "format": "prettier --write",
    "typecheck": "tsc -p src/client/tsconfig.json --noEmit && tsc -p src/server/tsconfig.json --noEmit",
    "test": "vitest"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.592.0",
    "@types/multer": "^1.4.11",
    "body-parser": "^1.20.2",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^6.21.1",
    "react-router-dom": "^6.23.1",
    "tsx": "^4.15.2",
    "typescript": "^5.3.2",
    "vite-express": "^0.17.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.3",
    "@types/react": "^18.0.38",
    "@types/react-dom": "^18.2.16",
    "@vitejs/plugin-react": "^4.2.0",
    "nodemon": "^3.0.1",
    "vite": "^5.0.2",
    "vite-tsconfig-paths": "^4.2.3",
    "vitest": "^1.1.0"
  }
}
